const mongoose = require('mongoose');

const Schema = mongoose.Schema;

const bookSchema = new Schema({
  bookName: {
    type: String,
    required: true,
    trim: true,
    minlength: 1
  },
  cost: {
    type: String,
    required: true,
  },
  auth: {
    type: Boolean,
    required: true,
  },
  toExpensive: {
    type: Boolean,
    required: false,
  },
  userid: {
    type: String,
    required: true,
  },
  denied:{
    type: Boolean,
    required: false,
  },
  moreInfo:{
    type: Boolean,
    required: false,
  }


}, {
  timestamps: true,
});

const Book = mongoose.model('Book', bookSchema);

module.exports = Book;
